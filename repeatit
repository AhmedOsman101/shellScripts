#!/usr/bin/env bash

cmd="$1"
counter=1

# Infinite loop: repeat the command until it exits successfully
while true; do

  if $cmd; then
    if [ ! $counter -eq 1 ]; then
      echo ""
      log-success "Done after $counter retries ðŸš€!"
    fi
    break
  fi

  log-info "Retrying '$cmd' in 5s..."
  sleep 5s
  clear
  counter=$((counter + 1))
done
