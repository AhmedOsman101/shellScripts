#!/usr/bin/env bash

backup=0

while getopts "b" opt; do
  case ${opt} in
  b)
    backup=1
    ;;
  \?)
    echo "Invalid option: -${OPTARG}" >&2
    exit 1
    ;;
  *)
    echo "Invalid option: -${OPTARG}" >&2
    exit 1
    ;;
  esac
done
shift $((OPTIND - 1))

file="$1"
tmpfile="$(mktemp)"
trap 'rm -f $tmpfile' EXIT

if [[ -z ${file} || ${file} == "-" ]]; then
  # Read from stdin
  awk '
    {
      count[$0]++
      lines[NR] = $0
    }
    END {
      for (i = 1; i <= NR; i++) {
        if (count[lines[i]] == 1) print lines[i]
      }
    }
  ' >"${tmpfile}"
  # print the output to the stdout
  cat "${tmpfile}"
else
  # Read from file
  if [[ -f ${file} ]]; then
    if [[ ${backup} -eq 1 ]]; then
      cp "${file}" "${file}.bak"
      log-info "Backup created as ${file}.bak"
    fi
    awk '
      {
        count[$0]++
        lines[NR] = $0
      }
      END {
        for (i = 1; i <= NR; i++) {
          if (count[lines[i]] == 1) print lines[i]
        }
      }
    ' "${file}" >"${tmpfile}"
    # override the input file
    cat "${tmpfile}" >"${file}"
    log-info "Removed all non-unique entries!"
  else
    log-error "Error: ${file} was not found!" >&2
    exit 1
  fi
fi
